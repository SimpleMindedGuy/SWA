                    style="fill:none;stroke-width:0.42333333;stroke-linecap:butt;stroke-linejoin:miter;stroke-miterlimit:4;stroke-dasharray:none;stroke-opacity:1"
                    d="m 1.9641796,2.2158919 c 0,5.0267387 0,5.0267387 0,5.0267387"

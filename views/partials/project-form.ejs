<div class="row">
    <form enctype="multipart/form-data" method="POST" action=<%=req%>>
        <input type="text" name="id"  value=<%=`${nextid}`%> style="display: none;">

        <div class="input project-ui">
            <div>
                <p>project title</p>
                <textarea class="comment-input" name ="Project_title" oninput="ActiveTextarea(this)" onresize="ActiveTextarea(this)" ondragover="ActiveDropZone(this)" ondragleave="DeActiveDropZone(this)" ondrop="DropFile(this,event)"
                value=<%=" typeof Project_title !='undefined' ? Project_title : ''   "%> ></textarea>
                <p>project description</p>
                <textarea class="post-input" name ="Project_text" oninput="ActiveTextarea(this)" onresize="ActiveTextarea(this)" ondragover="ActiveDropZone(this)" ondragleave="DeActiveDropZone(this)" ondrop="DropFile(this,event)"
                value=<%=" typeof Project_text !='undefined' ? Project_text : ''     "%> > </textarea>

            </div>

            <div>
                <p>project status</p>
                
                <div class="drop-list">
                    <input id="option-list-1" type="checkbox" unchecked>
                    <label for="option-list-1" class="option-list">
                        <p>Chose Status</p>
                        <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        class="arrow">
                            <path 
                            inkscape:transform-center-x="-0.010131665"
                            inkscape:transform-center-y="-2.9884325"
                            d="M 22.5,19.465298 12.093831,14.621402 1.5,19.5 6.7348032,10.499998 11.969605,1.5 l 5.265197,8.982651 z"
                            sodipodi:nodetypes="ccccccc" />
                        </svg>
                    </label>
                    <div class="option-menu" style="--amount : 4">
                        <input onchange="CloseOptionMenu(this);ChangeOption(this)" type="radio" name="Project_status" id="menu-1-option-1" value="Starting soon" >
                        <label class="option"  style="--order : 1" for="menu-1-option-1"><p>Starting soon</p></label>

                        <input onchange="CloseOptionMenu(this);ChangeOption(this)" type="radio" name="Project_status" id="menu-1-option-2" value="Work in progress" >
                        <label class="option"  style="--order : 2" for="menu-1-option-2"><p>Work in progress</p></label>

                        <input onchange="CloseOptionMenu(this);ChangeOption(this)" type="radio" name="Project_status" id="menu-1-option-3" value="Canceled" >
                        <label class="option"  style="--order : 3" for="menu-1-option-3"><p>Canceled</p></label>

                        <input onchange="CloseOptionMenu(this);ChangeOption(this)" type="radio" name="Project_status" id="menu-1-option-4" value="Done" >
                        <label class="option"  style="--order : 4" for="menu-1-option-4"><p>Done</p></label>

                    </div>
                </div>
                
                <p>Image (optional)</p>
                <input name="image" type="file" id="project-ui" onclick="ReadInputFiles(this)" onchange="InputFiles(this , event)" >
                <div class="dropzone single" ondragover="ActiveDropZone(this)" ondragleave="DeActiveDropZone(this)" ondrop="DropFile(this,event)">
                    <label for="project-ui">
                        <p class="note">click to add image</p>
                    </label>
                </div>
                
            </div>

        </div>
        <div class="buttons">
            <input  type="submit" value="Post">
        </div>
    </form>
</div>
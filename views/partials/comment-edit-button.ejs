<% if(user) { %> 
        
    <% if(Comment.User) { %>
        <input id="Edit-upload-<%=index%>-Comment-<%=C_Index %>" type="checkbox" unchecked>
        <label for="Edit-upload-<%=index%>-Comment-<%=C_Index %>" class="edit-button">
            <svg
            width="20"
            height="5"
            viewBox="0 0 5.2916666 1.3229168"
            version="1.1"
            class="edit-icon"
            >
                <g
                inkscape:label="Layer 1"
                inkscape:groupmode="layer"
                id="layer1">
                    <circle
                    style="fill-opacity:1;stroke:none;stroke-width:0.0978133;stroke-linecap:square;stroke-linejoin:round"
                    id="path846-3-6"
                    cx="4.3335695"
                    cy="0.67886633"
                    r="0.65526402" />
                    <circle
                    style="fill-opacity:1;stroke:none;stroke-width:0.0978133;stroke-linecap:square;stroke-linejoin:round"
                    id="path846-3-6-7"
                    cx="2.6790216"
                    cy="0.67886633"
                    r="0.65526402" />
                    <circle
                    style="fill-opacity:1;stroke:none;stroke-width:0.0978133;stroke-linecap:square;stroke-linejoin:round"
                    id="path846-3-6-7-5"
                    cx="0.95849198"
                    cy="0.67886633"
                    r="0.65526402" />
                </g>
            </svg>
        </label>
        <% if( user._id !== Comment.User && userPermissions.Values[`delete${upload.Type}s`] < upload.Level) { %>
        <div class="option-menu" style="--amount : 2">

            <form method="post" action=<%=`/upload/${upload._id}/comment/${Comment._id}?_method=DELETE`%> class="option" style="--order : 2" >
                <input onclick="CloseOptionMenu(this)" type="submit" value="Delete" >
            </form>

        </div>
        <% } else if( user._id == Comment.User._id.toString() ) { %>
        <div class="option-menu" style="--amount : 2">

            <a href=<%=`/comment/${Comment._id}/edit`%> onclick="CloseOptionMenu(this)" class="option" style="--order : 1">Edit</a>

            <form method="POST" action=<%=`/upload/${upload._id}/comment/${Comment._id}?_method=DELETE`%> class="option" style="--order : 2" >
                <input onclick="CloseOptionMenu(this)" type="submit" value="Delete" >
            </form>

        </div>
        <% } else if( user._id !== Comment.User._id.toString() ) { %>
        <div class="option-menu" style="--amount : 1">
            
            <form method="POST" action=<%=`/comment/${Comment._id}/hide`%> class="option" style="--order : 1" >
                <input onclick="CloseOptionMenu(this)" type="submit" value="Hide">
            </form>

        </div>
        <% } %>
    <% } else if(userPermissions.Values[`delete${upload.Type}s`] < upload.Level){ %> 
        <input id="Edit-upload-comment-<%= C_Index %>" type="checkbox" unchecked>
        <label for="Edit-upload-comment-<%= C_Index %>" class="edit-button">
            <svg
            width="20"
            height="5"
            viewBox="0 0 5.2916666 1.3229168"
            version="1.1"
            class="edit-icon"
            >
                <g
                inkscape:label="Layer 1"
                inkscape:groupmode="layer"
                id="layer1">
                    <circle
                    style="fill-opacity:1;stroke:none;stroke-width:0.0978133;stroke-linecap:square;stroke-linejoin:round"
                    id="path846-3-6"
                    cx="4.3335695"
                    cy="0.67886633"
                    r="0.65526402" />
                    <circle
                    style="fill-opacity:1;stroke:none;stroke-width:0.0978133;stroke-linecap:square;stroke-linejoin:round"
                    id="path846-3-6-7"
                    cx="2.6790216"
                    cy="0.67886633"
                    r="0.65526402" />
                    <circle
                    style="fill-opacity:1;stroke:none;stroke-width:0.0978133;stroke-linecap:square;stroke-linejoin:round"
                    id="path846-3-6-7-5"
                    cx="0.95849198"
                    cy="0.67886633"
                    r="0.65526402" />
                </g>
            </svg>
        </label>
        <div class="option-menu" style="--amount : 1">
            <form method="post" action=<%=`/upload/${upload._id}/comment/${Comment._id}?_method=DELETE`%> class="option" style="--order:2">
                <input onclick="CloseOptionMenu(this)" type="submit" value="Delete" >
            </form>
        </div>
    <% } %>
<% } %>